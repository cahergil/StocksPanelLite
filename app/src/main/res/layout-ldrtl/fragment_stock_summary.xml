                        android:layout_weight="1"
                        android:gravity="left"
                        android:maxLines="1"
                        android:textSize="@dimen/fss_summary_text_size" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
