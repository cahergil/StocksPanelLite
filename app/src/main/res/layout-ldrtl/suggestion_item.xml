<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/si_ll_layout_margin"
    android:background="@drawable/selector_suggestion"
    android:orientation="vertical"
    android:divider="?android:dividerHorizontal"
    android:showDividers="end"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/symbol"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/si_symbol_paddingLeft"
            android:paddingStart="@dimen/si_symbol_paddingLeft"
            android:paddingTop="@dimen/si_symbol_paddingTop"
            android:textColor="@color/gray400"
            android:textSize="@dimen/si_medium_text_size"
            android:gravity="end"
            tools:text="goog" />
        <TextView
            android:id="@+id/stockExchange"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:textSize="@dimen/si_small_text_size"
            android:textColor="@color/gray400"
            android:gravity="left"
            android:paddingRight="@dimen/si_stockExchange_paddingRight"
            android:paddingEnd="@dimen/si_stockExchange_paddingRight"

            tools:text="NMS" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:paddingLeft="@dimen/si_name_paddingLeft"
            android:paddingBottom="@dimen/si_name_paddingBottom"
            android:textColor="@android:color/black"
            android:textSize="@dimen/si_medium_text_size"
            android:gravity="end"
            tools:text="Alphabet Inc." />

        <TextView
            android:id="@+id/securityType"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:textSize="@dimen/si_small_text_size"
            android:textColor="@color/green_700"
            android:gravity="left"
            android:paddingRight="@dimen/si_securityType_padingRight"
            android:paddingEnd="@dimen/si_securityType_padingRight"
            tools:text="Index" />

    </LinearLayout>


</LinearLayout>