<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/rootSplash"
    android:background="@color/gray800"
    >
<ImageView
    android:id="@+id/img"
    android:layout_centerVertical="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:src="@drawable/stock_market_icon"

    tools:visibility="visible"
    />
    <TextView
        android:id="@+id/appName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/as_appname"
        android:textColor="@color/white"
        android:textSize="@dimen/as_appname_text_size"
        android:alpha="0"
        android:layout_centerVertical="true"
        android:layout_below="@+id/img"
        android:gravity="center"
        tools:alpha="1"/>
    <TextView
        android:id="@+id/loading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/as_loading"
        android:textColor="@color/ltgray"
        android:textSize="@dimen/as_loading_text_size"
        android:alpha="0"
        android:layout_below="@+id/appName"
        android:gravity="center"
        tools:alpha="1"/>
</RelativeLayout>