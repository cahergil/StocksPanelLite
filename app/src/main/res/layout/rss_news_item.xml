<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/rni_card_margin"
    android:focusable="true"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:contentPadding="@dimen/rni_content_padding"
    card_view:cardUseCompatPadding="true"
    card_view:cardElevation="@dimen/rni_card_elevation"
    card_view:cardCornerRadius="@dimen/rni_card_corner"

>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtTitulo"
        style="@style/TextAppearance.AppCompat.Headline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        tools:text="titulo"/>

    <TextView
        android:id="@+id/txtFecha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="fecha"
        android:gravity="left"
        style="@style/TextAppearance.AppCompat.Small"/>

    <ImageView
        android:id="@+id/ivImgaen"
        android:layout_width="match_parent"
        android:layout_height="@dimen/rni_image_height"
        tools:src="@drawable/noimage"/>
    <TextView
        android:id="@+id/txtUrlLink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/txtContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        style="@style/TextAppearance.AppCompat.Subhead"
        android:gravity="left"
        android:ellipsize="end"
        android:maxLines="4"
        tools:text="Content"/>
</LinearLayout>
</android.support.v7.widget.CardView>